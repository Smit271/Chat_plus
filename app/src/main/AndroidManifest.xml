<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.chatplus.login_register">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:appComponentFactory="whateverString"
        android:icon="@drawable/app_logo"
        android:label="Chat Plus"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Login_register"
        tools:ignore="UnusedAttribute"
        tools:replace="android:appComponentFactory">
        <activity
            android:name="com.chatplus.login_register.list_of_requests"
            android:exported="true" />
        <activity
            android:name="com.chatplus.login_register.ChatScreen1"
            android:label="Chat_screen_1"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.chatplus.login_register.setting_profile_picture" />
        <activity
            android:name="com.chatplus.login_register.chat_listview_of_friends"
            android:exported="true" />
        <activity
            android:name="com.chatplus.login_register.search_users"
            android:exported="true"
            android:label="Search friend" />
        <activity
            android:name="com.chatplus.login_register.login"
            android:exported="true"
            android:label="Login" />
        <activity
            android:name="com.chatplus.login_register.Register_page"
            android:label="Register"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.chatplus.login_register.MainActivity"
            android:exported="true"
            android:label="Chat Plus">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>