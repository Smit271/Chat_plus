<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_received"
    android:background="@drawable/chat_left_item_background"
    >

    <TextView
        style="@style/style_message_received"
        android:id="@+id/message_user"
        android:textColor="@color/primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Karm Patel"
        android:textSize="16sp"
        android:textStyle="bold"

        />
    <TextView
        style="@style/style_message_received"
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Hey, Can you please complete this project before 28th? and also send the assignment given by Rana"
        android:textColor="@color/white"
        />
    <TextView
        style="@style/style_message_received"
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="26-09-2021 (15:37:28)"
        android:textSize="10sp"
        />


</LinearLayout>