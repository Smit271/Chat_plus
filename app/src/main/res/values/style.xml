<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="style_message_sent">
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginLeft">120dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/chat_right_item_background</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="style_message_received">
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@drawable/chat_left_item_background</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>